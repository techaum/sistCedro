@model IEnumerable<sistCedro.Models.Prato>

@{
    ViewBag.Title = "Index";
}

<h2>Pratos</h2>

<p>
    @Html.ActionLink("Cadastrar novo Prato", "Create", null, new { @class = "btn btn-success" })
</p>

<table class="table table-striped table-bordered">
    <tr>
        <th style="width:10px">
            Remover
        </th>
        <th style="width:20px">
            Editar
        </th>

        <th style="text-align:center">
            @Html.DisplayNameFor(model => model.nomePrato)
        </th>

        <th style="text-align:center">
            @Html.DisplayNameFor(model => model.Restaurante.nomeRestaurante)
        </th>

        <th style="text-align:center" width="5%">
            @Html.DisplayNameFor(model => model.precoPrato)
        </th>

    </tr>

@foreach (var item in Model) {
    <tr>

        <td style="width:5%" align="center"> @Html.ActionLink(" ", "Delete", new { id = item.Id }, new { @class = "glyphicon glyphicon-remove-sign" })</td>

        <td style="width:5%" align="center"> @Html.ActionLink(" ", "Edit", new { id = item.Id }, new { @class = "glyphicon glyphicon-pencil" }) </td>

        <td align="center"> @Html.DisplayFor(modelItem => item.nomePrato) </td>

        <td align="center"> @Html.DisplayFor(modelItem => item.Restaurante.nomeRestaurante) </td>

        <td align="center"> @Html.DisplayFor(modelItem => item.precoPrato) </td>
    </tr>
}

</table>
