@model IEnumerable<sistCedro.Models.Restaurante>


    @{
        ViewBag.Title = "RESTAURANTES";
    }

<h2>Restaurantes</h2>

<div class="container form-group">
    <div class="row">
        @using (Html.BeginForm())
        {
            <p>
                Filtrar a pesquisa por nome @Html.TextBox("SearchString", null, new { @class = "form-control" })
            <p>
                <input type="submit" class="btn btn-primary" value="Pesquisar" />
                @Html.ActionLink("Cadastrar Novo Restaurante", "Create", null, new { @class = "btn btn-success" })
            </p>
                
            </p>
        }
        </div>  
</div>

<div class="container form-group">
    <div class="row">
        <table class="table table-striped table-bordered">
            <tr>
                <th align="center" style="width:5%">
                    Remover
                </th>

                <th align="center" style="width:5%">
                    Editar
                </th>

                <th style="text-align:center">
                    Restaurantes
                </th>
            </tr>

            @foreach (var item in Model)
            {
                <tr >
                    <td style="width:5%" align="center">@Html.ActionLink(" ", "Delete", new { id = item.Id }, new { @class = "glyphicon glyphicon-remove-sign" })</td>
                    <td style="width:5%" align="center">@Html.ActionLink(" ", "Edit", new { id = item.Id }, new { @class = "glyphicon glyphicon-pencil" }) </td>
                    <td align="center">@Html.DisplayFor(modelItem => item.nomeRestaurante)</td>
                </tr>
            }

        </table>
    </div>
</div>
